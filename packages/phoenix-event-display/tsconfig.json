{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "declaration": true,
    "target": "es2020",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
    // "verbatimModuleSyntax": true - Jest CI tests fail if we include this
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
