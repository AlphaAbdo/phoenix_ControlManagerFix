{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "declaration": true,
    "target": "es2020",
    "outDir": "dist",
    "module": "node16",
    "moduleResolution": "node16",
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
