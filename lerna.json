{
  "version": "2.10.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/phoenix-ng/projects/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.obj"
      ],
      "message": "chore(release): %s",
      "conventionalCommits": true,
      "changelogPreset": "angular"
    },
    "run": {
      "parallel": true
    },
    "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
    "args": [
      "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "--runInBand",
      "--no-cache",
      "maxWorkers=4"
  ]
  }
}
